{
    "tasks": {
        "exec": "deno run --allow-write --allow-read src/main.ts",
        "debug": "deno run --inspect-brk --allow-write --allow-read src/main.ts"
    },
    "lint": {
        "include": [
            "src/**/*.ts"
        ],
        "rules": {
            "tags": [
                "recommended"
            ]
        }
    },
    "fmt": {
        "useTabs": true,
        "lineWidth": 80,
        "singleQuote": true,
        "indentWidth": 8,
        "semiColons": true
    },
    "compilerOptions": {
        "emitDecoratorMetadata": true
    }
}