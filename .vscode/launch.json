{
    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Launch Quiz App",
            "type": "node",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--unstable",
                "--config",
                "./quiz/deno/deno.json",
                "--inspect-wait",
                "--allow-all",
                "./quiz/deno/src/main.ts"
            ],
            "attachSimplePort": 9229,
            "console": "integratedTerminal"
        }
    ],
}